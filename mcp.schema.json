{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["mcpServers"],
  "properties": {
    "mcpServers": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {
        "type": "object",
        "properties": {
          "env": {
            "type": "object",
            "additionalProperties": {
              "type": "string"
            }
          }
        },
        "oneOf": [
          {
            "required": ["command", "args"],
            "properties": {
              "command": {
                "type": "string"
              },
              "args": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "minItems": 1
              }
            },
            "additionalProperties": false
          },
          {
            "required": ["url"],
            "properties": {
              "url": {
                "type": "string",
                "format": "uri"
              }
            },
            "additionalProperties": false
          }
        ],
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
